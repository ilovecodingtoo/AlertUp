<?xml version="1.0" encoding="utf-8"?>
<network-security-config>

    <!-- Default config: allow all HTTPS traffic to system-trusted CAs -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext (HTTP) for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>

    <!-- Optional: allow cleartext to your dev server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">emergenze.protezionecivile.gov.it</domain>
    </domain-config>

</network-security-config>


